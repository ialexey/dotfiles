[github]
	user = ialexey
[core]
	editor = nvim -f
	pager = diff-so-fancy | less --tabs=2
[merge]
	tool = code
[diff]
	tool = code
[diff-so-fancy]
	stripLeadingSymbols = false
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color]
	ui = true
[color "diff"]
	old = red bold
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	new = green bold
	whitespace = red reverse
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[http]
	postBuffer = 1049000
[gpg "x509"]
	program = smimesign
[gpg]
	format = x509
[push]
	default = current
[pull]
	rebase = true
[init]
	defaultBranch = main
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
