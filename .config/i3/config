  output eDP-1
  output HDMI-2
  output HDMI-1
  output HDMI-0
  output DP-0
  output HDMI-A-0
  tray_output DisplayPort-0
  tray_output DisplayPort-1
  tray_output DisplayPort-3
  tray_output eDP-1-1
  tray_output eDP-1
  tray_output HDMI-2
  tray_output HDMI-1
  tray_output HDMI-0
  tray_output DP-0
  tray_output HDMI-A-0
}

